{
  "name": "sjsitapp-agent",
  "version": "0.1.2",
  "main": "app.js",
  "description": "An application for the San Jose Sharks Ice Team.",
  "repository": "https://github.com/mattcarlotta/SJSITApp-Agent",
  "author": "Matt Carlotta",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=8",
    "npm": ">=3"
  },
  "scripts": {
    "build": "babel ./ -d build --no-comments --ignore node_modules,**/__tests__,coverage,setupTests.js,**/__mocks__",
    "dev": "better-npm-run dev",
    "db:drop": "better-npm-run db:drop",
    "db:seed": "better-npm-run db:seed",
    "db:seeddev": "better-npm-run db:seeddev",
    "db:seedprod": "better-npm-run db:seedprod",
    "db:seedstage": "better-npm-run db:seedstage",
    "pre-commit": "npm run lint --silent && npm run test",
    "start": "better-npm-run start",
    "staging": "better-npm-run staging",
    "lint": "lint-staged",
    "test": "better-npm-run test",
    "test:cov": "better-npm-run test:cov",
    "test:watch": "better-npm-run test:watch"
  },
  "betterScripts": {
    "db:drop": {
      "command": "babel-node ./utils/teardownDB.js",
      "env": {
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "development",
        "DROPDB": "true"
      }
    },
    "db:seed": {
      "command": "babel-node ./utils/seedDB.js",
      "env": {
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "development",
        "SEED": "true"
      }
    },
    "db:seeddev": {
      "command": "babel-node ./utils/seedCurrentMonth.js",
      "env": {
        "DATABASE": "sjsitapp-dev-db",
        "NODE_ENV": "development"
      }
    },
    "db:seedstage": {
      "command": "babel-node ./utils/seedCurrentMonth.js",
      "env": {
        "DATABASE": "sjsitapp-staging-db",
        "NODE_ENV": "staging"
      }
    },
    "db:seedprod": {
      "command": "babel-node ./utils/seedCurrentMonth.js",
      "env": {
        "DATABASE": "sjsitapp-prod-db",
        "NODE_ENV": "production"
      }
    },
    "dev": {
      "command": "nodemon --exec babel-node ./app.js",
      "env": {
        "CLIENT": "http://localhost:3000",
        "DATABASE": "sjsitapp-dev-db",
        "NODE_ENV": "development",
        "IMAGEAPI": "https://i.sjsiceteam.com"
      }
    },
    "start": {
      "command": "node ./build/app.js",
      "env": {
        "CLIENT": "https://sjsiceteam.com",
        "DATABASE": "sjsitapp-prod-db",
        "NODE_ENV": "production",
        "IMAGEAPI": "https://i.sjsiceteam.com"
      }
    },
    "staging": {
      "command": "node ./build/app.js",
      "env": {
        "CLIENT": "https://sjsiceteam.com",
        "DATABASE": "sjsitapp-staging-db",
        "NODE_ENV": "staging",
        "IMAGEAPI": "https://i.sjsiceteam.com"
      }
    },
    "test": {
      "command": "jest --config ./jest.json --passWithNoTests",
      "env": {
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "testing",
        "DROPDB": "true",
        "IMAGEAPI": "http://localhost:4000"
      }
    },
    "test:cov": {
      "command": "jest --config ./jest.json --coverage",
      "env": {
        "CLIENT": "http://localhost:5001",
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "testing",
        "DROPDB": "true",
        "IMAGEAPI": "http://localhost:4000"
      }
    },
    "test:watch": {
      "command": "jest --config ./jest.json --passWithNoTests --watchAll",
      "env": {
        "CLIENT": "http://localhost:5001",
        "DATABASE": "sjsitapp-test-db",
        "NODE_ENV": "testing",
        "IMAGEAPI": "http://localhost:4000"
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@sendgrid/mail": "^6.4.0",
    "axios": "^0.19.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "better-npm-run": "^0.1.1",
    "chalk": "^3.0.0",
    "lodash": "^4.17.15",
    "moment-timezone": "^0.5.27",
    "mongoose": "^5.7.13",
    "node-schedule": "^1.3.2",
    "nodemon": "^2.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "axios-mock-adapter": "^1.17.0",
    "babel-jest": "^24.9.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  }
}
